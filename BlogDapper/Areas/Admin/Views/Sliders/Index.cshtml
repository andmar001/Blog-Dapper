@model IEnumerable<BlogDapper.Models.Slider>

@{
    ViewData["Title"] = "Lista de Sliders";
}

<div class="row">
    <div class="col-9">
        <h1>Administrador de Sliders</h1>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary float-end"><i class="bi bi-plus-square"></i> Agregar Nuevo Slider</a>
    </div>
</div>


<div class="card bg-light p-3">
    <table class="table" id="tblSliders">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Url</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/sliders.js"></script>
}